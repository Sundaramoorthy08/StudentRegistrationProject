@model List<Students>


<div class="container">
	<div class="row mb-4">
		<div class="col-md-6  text-uppercase">
			<h2>Student Information</h2>
		</div>
		<div class="col-md-6 text-end">
			<a asp-controller="Students" asp-action="Create" class="btn btn-primary"><i class="bi bi-person-fill-add"></i> Create</a>

		</div>
	</div>
	<hr/>
	@if(Model.Count>0){
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>FirstName</th>
				<th>LastName</th>
				<th>Email</th>
				<th>Phone</th>
				<th>city</th>
			</tr>
		</thead>
		<tbody>

			@foreach(var item in Model)
			{
				<tr>
					<td>@item.FirstName</td>
					<td>@item.LastName</td>
					<td>@item.Email</td>
					<td>@item.Phone</td>
					<td>@item.city</td>
					<td class="d-flex align-items-center justify-content-center">
						<div class="w-75 btn-group" role="group">
							<a asp-controller="Students" asp-action="Details" asp-route-id="@item.Id" 
								class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
									<i class="bi bi-eye"></i>
							</a>

								<a asp-controller="Students" asp-action="Edit" asp-route-id="@item.Id"
								   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
									<i class="bi bi-pencil-square"></i>
								</a>


								<a asp-controller="Students" asp-action="Delete" asp-route-id="@item.Id"
								   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
									<i class="bi bi-trash"></i>
								</a>
						</div>
					</td>
				</tr>
			}

		</tbody>


		</table>
	}
	else
	{
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h2 class="text-center text-uppercase text-warning pt-4">No Records To Show</h2>
				</div>

			</div>

		</div>

	}
</div>